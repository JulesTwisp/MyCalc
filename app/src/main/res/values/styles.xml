<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_display">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/padding_display</item>
        <item name="android:background">@drawable/display_bg</item>

    </style>

    <style name="table_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_buttons</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>
